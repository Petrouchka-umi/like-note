.contents_user
  .content
    %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :name
      %em
        (8 characters maxmum)
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name", class: "user_text", maxlength: "8"
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "user_text"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "user_text"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "user_text"
    .actions
      = f.submit "Sign up", class: "submit_user"
  -# = render "devise/shared/links"

